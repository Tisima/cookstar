<h2 class="py-4">サインアップ</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ユーザー名 %><br />
    <%= f.text_field :name, :placeholder => "(例)テスト", autofocus: true %>
  </div>

  <div class="field pt-3">
    <%= f.label :Eメール %><br />
    <%= f.email_field :email, :placeholder => "(例)sampel@sample", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field pt-3">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, :placeholder => "*必須", autocomplete: "new-password" %>
  </div>

  <div class="field pt-3">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, :placeholder => "*必須", autocomplete: "new-password" %>
  </div>

  <div class="actions pt-3">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
