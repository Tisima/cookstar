<div class="container py-3">
  <div class="row">
	<div class="col-xs-2">
    <h2>いいね一覧</h2>
    </div>

    <div class="col-xs-12 pull-right pl-5 pt-3">
    <%= link_to "マイページに戻る", user_path(@user), class: 'btn btn-warning' %>
    </div>
    </div>
  </div>
	  <div class="row py-5">
		<% @like_recipes.each do |recipe|%>
		<div class="col-xs-4 px-5 py-3">
			<%= link_to recipe_path(recipe) do %>
        <%= image_tag recipe.image, size: "200x200" %><br>
        <p class="text-center pt-2"><%= recipe.title %></p>
			<% end %>
		</div>
		<% end %>
	</div>
</div>