<div class="container">
  <div class="row">
    <div class="col-xg-3">
      <%= image_tag @user.get_profile_image, size: "250x230"%>
    </div>
    <div class="col-xg-7">
      <h3 class="profile-name"><%= @user.name %></h3>
      <h3 class="profile-name"><%= @user.introduction %></h3>
  <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>
