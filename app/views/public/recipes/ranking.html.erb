<div class="container py-3">
  <div class="row">
	  <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4 py-3">
      <h2>いいねランキング</h2>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-6 col-lg-4 py-3">
      <%= link_to new_recipe_path,class: 'text-block' do %>
         <i class="fas fa-utensils"></i>
         レシピ投稿はこちら
        <% end %>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4 py-3">
      <div class="search-form">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <%= f.text_field :keyword, value: @keyword %>
          <%= f.submit "検索" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row py-5">
	  <% @recipes.each do |recipe| %>
	  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 px-5 py-3">
		  <%= link_to recipe_path(recipe) do %>
        <%= image_tag recipe.image, size: "200x200" %><br>
        <p class="text-center pt-2"><%= recipe.title %></p>
        ♥<%= recipe.likes.count %> いいね
			<% end %>
		</div>
		<% end %>
		<%= paginate @recipes %>
	</div>
</div>
