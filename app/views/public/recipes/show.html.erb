  <div class="container">
    <div class="row">
      <div class="col-3 pt-2">

        <% if @recipe.image.attached? %>
          <%= image_tag @recipe.image, size: "300x250" %>
        <% else %>
          <%= image_tag 'no_image', size: "300x300" %>
        <% end %>
      </div>

      <div class="col-5">
        <h2 class="red-border px-5 pt-5"><%= @recipe.title %></h2>
        <div class="text-center pt-3">
          <% if @recipe.user == current_user %>
              <%= link_to "編集する", edit_recipe_path, class: 'btn btn-success' %>
              <span>　　</span><%= link_to "削除する", recipe_path(@recipe), method: :delete, class: 'btn btn-danger' %>
          <% end %>
          <% if @recipe.liked_by?(current_user) %>
        <p class="py-4">
        <%= link_to recipe_like_path(@recipe), method: :delete do %>
          ♥<%= @recipe.likes.count %> いいね
        <% end %>
        </p>
        <% else %>
        <p class="px-4 py-4">
        <%= link_to recipe_likes_path(@recipe), method: :post do %>
          ♡<%= @recipe.likes.count %> いいね
        <% end %>
         </p>
        <% end %>
        </div>
      </div>
      <div class="col-3">
        <h5 class="red-border px-3 pb-2 pt-4">投稿ユーザー</h5>
        <%= link_to user_path(@user) do %>
          <%= image_tag @user.get_profile_image, size: "100x100"%>
          <%= @user.name %>
        <% end %>
      </div>
    </div>
      <div class="row">
        <div>
          <h5 class="red-border px-3 pb-2 pt-4">材料</h5>
          <p class="ml-5"><%= @recipe.ingredients %></p><br>
          <h5 class="red-border px-3 pb-2">料理手順</h5>
          <p class="ml-5"><%= @recipe.body %></p>
          <p class="text-right pt-3">登録日<%= @recipe.created_at.strftime('%Y/%m/%d') %></p>
        </div>
      </div>
      	<div class="py-4">
      	  <%= form_with model: [@recipe, @recipe_comment] do |f| %>
          <%= f.text_area :comment, rows: '3', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>

        </div>
      <div>
        <p>コメント件数：<%= @recipe.recipe_comments.count %></p>
        <table>
          <tbody>
            <% @recipe.recipe_comments.each do |recipe_comment| %>
              <tr>
                <td><p class="py-1 px-4"><%= image_tag recipe_comment.user.profile_image, size: "100x100" %></p></td>
                <td>　　<%= recipe_comment.comment %>　　　<td>
                <td>投稿者　<%= recipe_comment.user.name %>　　<td>
                <td><%= recipe_comment.created_at.strftime('%Y/%m/%d') %><td>
                <% if recipe_comment.user == current_user %>
                  <%= link_to "削除", recipe_recipe_comment_path(recipe_comment.recipe_id, recipe_comment.id), method: :delete %>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

