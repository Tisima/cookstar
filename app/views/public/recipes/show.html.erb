    <div class="container">
<!-- 画像 -->
        <div class="row">
          <div class="col-xg-3">
          <% if @recipe.image.attached? %>
            <%= image_tag @recipe.image, size: "300x300" %>
          <% else %>
            <%= image_tag 'no_image', size: "300x300" %>
          <% end %>
          </div>

<!-- タイトル -->
          <div class="col-xg-4">
            <div>
              <h4 class="red-border px-3 pb-1"><%= @recipe.title %></h4>
            </div>
            <div>
            <p class="ml-5"><%= @recipe.body %></p>
            </div>
          </div>
        </div>

