  <div class="container">
    <div class="row">
      <div class="col-xg-3">
        <% if @recipe.image.attached? %>
          <%= image_tag @recipe.image, size: "450x400" %>
        <% else %>
          <%= image_tag 'no_image', size: "300x300" %>
        <% end %>
      </div>

      <div class="col-xg-4">
        <div>
          <h3 class="red-border px-3 pb-2"><%= @recipe.title %></h3>
        </div>
        <div>
          <h5 class="red-border px-3 pb-2">材料</h5>
          <p class="ml-5"><%= @recipe.ingredients %></p>

        </div>
        <div>
          <h5 class="red-border px-3 pb-2">料理手順</h5>
          <p class="ml-5"><%= @recipe.body %></p>
        </div>
      </div>
    </div>
  </div>

