<div class="container py-3">
  <div class="row">
	<div class="col-xs-12 col-sm-8 col-md-6 col-lg-4">
    <h2>レシピ一覧</h2>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4 pl-5 pt-3">
      <div class="search-form">
        <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
          <%= f.text_field :keyword, value: @keyword %>
          <%= f.submit "検索" %>
        <% end %>
       </div>
    </div>
    </div>
  </div>
	  <div class="row py-5">
		<% @recipes.each do |recipe| %>
		<div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 px-5 py-3">
			<%= link_to admin_recipe_path(recipe) do %>
        <%= image_tag recipe.image, size: "200x200" %><br>
        <p class="text-center pt-2"><%= recipe.title %></p>
			<% end %>
		</div>
		<% end %>
	</div>
<%= paginate @recipes %>
</div>
