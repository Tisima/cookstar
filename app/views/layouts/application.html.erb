<!DOCTYPE html>
<html>
  <head>
    <title>COOKSTAR</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header class="navbar navbar-dark bg-primary" >
   <nav class="navbar navbar-dark bg-primary">
    <div class="container">
     <a class = "navbar-brand px-4" href ="/",>
        <span>COOKSTAR</span>
          </a>


        <% if user_signed_in? %>
           <div class="search_form px-5">
             <%= form_with url: search_path, local: true, method: :get do |f| %>
               <%= f.text_field :word %>
               <%= f.select :range, options_for_select([['User'], ['Recipe']]) %>
               <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
               <%= f.submit "検索", class: "btn btn-light" %>
             <% end %>
           </div>
         <% end %>
       <% if user_signed_in? %><%# ユーザーがログインしている時 %>

         <%= link_to user_path(current_user),class: 'text-light' do %>
         <i class="fas fa-home"></i>
         マイページ
         <% end %>

        <%= link_to  recipes_path,class: 'text-light' do %>
        <i class="fas fa-birthday-cake"></i>
        レシピ一覧
        <% end %>

        <%= link_to users_path,class: 'text-light' do %>
         <i class="fas fa-users"></i>
         会員一覧
        <% end %>

        <%= link_to destroy_user_session_path, method: :delete, class: 'text-light' do %>
         <i class="fas fa-times-circle"></i>
         サインアウト
        <% end %>


        <% elsif admin_signed_in? %><%# 管理者がログインしている時 %>
          <%= render 'layouts/header_admin' %>
        <% else %><%# それ以外の時 %>

        <%= link_to new_user_session_path,class: 'text-light' do %>
        <i class="fas fa-sign-in-alt"></i>
        ログイン
        <% end %>

        <%= link_to homes_about_path,class: 'text-light' do %>
         <i class="fas fa-address-card"></i>
         アバウト
         <% end %>

         <%= link_to new_admin_session_path, class: 'text-light'  do %>
         <i class="far fa-user"></i>
         管理者ログイン
         <% end %>

      <% end %>
    </div>
   </nav>
  </header>

  <main>
    <div class="container main-container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>">
          <%= message %>
        </div>
    <% end %>
    <div class="container">
     <%= yield %>
    </div>
  </body>
</html>